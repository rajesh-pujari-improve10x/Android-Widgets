<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/list_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ListView"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_scroll_view_btn"
        app:layout_constraintStart_toStartOf="@+id/horizontal_scroll_view_btn"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_view_btn" />

    <Button
        android:id="@+id/addition_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Addition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customize_toast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Customize Toast"
        app:layout_constraintEnd_toEndOf="@+id/addition_btn"
        app:layout_constraintStart_toStartOf="@+id/addition_btn"
        app:layout_constraintTop_toBottomOf="@+id/addition_btn" />

    <Button
        android:id="@+id/toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="toggle button"
        app:layout_constraintEnd_toEndOf="@+id/customize_toast_btn"
        app:layout_constraintStart_toStartOf="@+id/customize_toast_btn"
        app:layout_constraintTop_toBottomOf="@+id/customize_toast_btn" />

    <Button
        android:id="@+id/check_box_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CheckBoxes"
        app:layout_constraintEnd_toEndOf="@+id/toggle_btn"
        app:layout_constraintStart_toStartOf="@+id/toggle_btn"
        app:layout_constraintTop_toBottomOf="@+id/toggle_btn" />

    <Button
        android:id="@+id/radio_btn_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Radio Button"
        app:layout_constraintEnd_toEndOf="@+id/check_box_btn"
        app:layout_constraintStart_toStartOf="@+id/check_box_btn"
        app:layout_constraintTop_toBottomOf="@+id/check_box_btn" />

    <Button
        android:id="@+id/rating_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rating Bar"
        app:layout_constraintEnd_toEndOf="@+id/radio_btn_rb"
        app:layout_constraintStart_toStartOf="@+id/radio_btn_rb"
        app:layout_constraintTop_toBottomOf="@+id/radio_btn_rb" />

    <Button
        android:id="@+id/seek_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SeekBar"
        app:layout_constraintEnd_toEndOf="@+id/rating_bar_btn"
        app:layout_constraintStart_toStartOf="@+id/rating_bar_btn"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar_btn" />

    <Button
        android:id="@+id/date_picker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Date Picker"
        app:layout_constraintEnd_toEndOf="@+id/seek_bar_btn"
        app:layout_constraintStart_toStartOf="@+id/seek_bar_btn"
        app:layout_constraintTop_toBottomOf="@+id/seek_bar_btn" />

    <Button
        android:id="@+id/time_picker_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Time Picker"
        app:layout_constraintEnd_toEndOf="@+id/date_picker_btn"
        app:layout_constraintStart_toStartOf="@+id/date_picker_btn"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_btn" />

    <Button
        android:id="@+id/vertical_scroll_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Vertical ScrollView"
        app:layout_constraintEnd_toEndOf="@+id/time_picker_btn"
        app:layout_constraintStart_toStartOf="@+id/time_picker_btn"
        app:layout_constraintTop_toBottomOf="@+id/time_picker_btn" />

    <Button
        android:id="@+id/horizontal_scroll_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Horizontal ScrollView"
        app:layout_constraintEnd_toEndOf="@+id/vertical_scroll_view_btn"
        app:layout_constraintStart_toStartOf="@+id/vertical_scroll_view_btn"
        app:layout_constraintTop_toBottomOf="@+id/vertical_scroll_view_btn" />

    <Button
        android:id="@+id/custom_list_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom ListView "
        app:layout_constraintEnd_toEndOf="@+id/list_view_btn"
        app:layout_constraintStart_toStartOf="@+id/list_view_btn"
        app:layout_constraintTop_toBottomOf="@+id/list_view_btn" />

    <Button
        android:id="@+id/image_switcher_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Switcher"
        app:layout_constraintEnd_toEndOf="@+id/custom_list_view_btn"
        app:layout_constraintStart_toStartOf="@+id/custom_list_view_btn"
        app:layout_constraintTop_toBottomOf="@+id/custom_list_view_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>